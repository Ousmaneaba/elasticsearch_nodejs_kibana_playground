	<div class="container-contact100">

		<div class="wrap-contact100">

			<h1>Application of Big Data</h1>

			<% 
			if (locals.to_delete && locals.to_delete == false){ 
			%>
			<p style="color: red; margin-bottom: 30px; text-align: center;">Please select a bank account to delete.</p>
			<% 
			}
			else if(locals.was_deleted && locals.was_deleted == true){ 
			%>
			<p style="color: green; margin-bottom: 30px; text-align: center;">Bank account deleted.</p>
			<form style="display: inline-block;" action="/">
				<button type="submit" class="btn btn-primary">
					Go to home
				</button>
			</form>
			<%
			}
			else{
			%>

			<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
				<thead class="thead-dark">
				  <tr>
					<th scope="col"><%=result.account_number%></th>
					<th scope="col"><%=result.firstname%></th>
					<th scope="col"><%=result.lastname%></th>
					<th scope="col"><%=result.gender%></th>
					<th scope="col"><%=result.age%></th>
					<th scope="col"><%=result.state%></th>
					<th scope="col"><%=result.city%></th>
					<th scope="col"><%=result.address%></th>
					<th scope="col"><%=result.email%></th>
					<th scope="col"><%=result.employer%></th>
					<th scope="col"><%=result.balance%></th>
				  </tr>
				</thead>
			  </table>

			<p>Are you sure you want to delete this bank account ?</p>
			<div>
				<form style="display: inline-block;" action="/">
					<button type="submit" class="btn btn-primary">
						Cancel
					</button>
				</form>
				<form style="display: inline-block;" action="delete" method="get">
					<button  type="submit" class="btn btn-danger" name="id" value="<%=result._id%>">
						Delete
					</button>
				</form>
				
			</div>

			<%
			}
